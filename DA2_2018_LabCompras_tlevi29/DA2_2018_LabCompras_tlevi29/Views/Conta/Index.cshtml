@model List<Conta>
@{
    ViewData["Title"] = "Conta Bancária";
}
<h2><strong>Conta</strong></h2>
@if (Model.Count == 0)
{
    <h2>Sem contas bancárias para apresentar...</h2>
}
else
{
    @foreach (Conta c in Model)
    {
        <div class="row well">
            <div class="col-md-4"><strong>Nome: </strong>@c.NomeTitular</div>
            <div class="col-md-4">
                <strong>Saldo: </strong>@c.Saldo €
            </div>
            <div class="col-md-4">
                <strong>Ativa: </strong>@if (c.Ativa == true)
                {
                    @:Sim
                }
                else
                {
                    @:Não
                }
            </div>
        </div>
    }
    <div class="col-md-6 text-center">
        <a asp-action="LimparContas" class="btn btn-lg btn-danger">Limpar tudo</a>
    </div>
}
<div class="text-center">
    <a asp-action="NovaConta" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-plus"></span> Adicionar Conta</a>
</div>

