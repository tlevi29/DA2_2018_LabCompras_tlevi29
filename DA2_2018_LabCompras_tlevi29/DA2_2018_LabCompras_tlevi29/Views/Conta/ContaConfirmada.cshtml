@model Conta
@{
    ViewData["Title"] = "Conta Confirmada";
}

<h2><strong>Conta Confirmada</strong></h2>
<div class="row">
    <div class="col-md-8">
        <div class="well">
            <p><strong>Nome: </strong>@Model.NomeTitular</p>
            <p><strong>Quantidade: </strong>@Model.Saldo</p>
            <p>
                <strong>Valor: </strong>@if (Model.Ativa)
                {
                    @:Sim
                }
                else
                {
                    @:Não
                }
        </div>
        <p class="text-center"><a asp-action="NovaConta">Voltar</a></p>
    </div>
</div>


