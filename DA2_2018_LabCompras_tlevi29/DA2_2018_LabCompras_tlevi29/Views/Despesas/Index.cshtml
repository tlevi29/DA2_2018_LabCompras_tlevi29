@model List<Despesa>
@{
    ViewData["Title"] = "Despesas";
}
<h2><strong>Despesas</strong></h2>
@if (Model.Count == 0)
{
    <h2>Sem despesas para apresentar...</h2>
}
else
{
    <table class="table table-bordered well">
        <tr>
            <th>Nome</th>
            <th>Quantidade</th>
            <th>Valor</th>
            <th>Categoria</th>
            <th>Pago</th>
        </tr>
        @foreach (Despesa d in Model)
        {
            <tr>
                <td>@d.NomeDespesa</td>
                <td>@d.Quantidade un</td> 
                <td>@d.Valor €</td> 
                <td>@d.Categoria</td>
                <td>
                    @if (d.Pago == true)
                    {
                        @:Sim
                    }
                    else
                    {
                        @:Não
                    }
                </td>
            </tr>
        }
    </table>
    <div class="col-md-6 text-center">
        <a asp-action="LimparDespesas" class="btn btn-lg btn-danger">Limpar dados</a>
    </div>
}
<div class="col-md-6 text-center">
    <a asp-action="NovaDespesa" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-plus"></span> Nova despesa</a>
</div>
<br />

