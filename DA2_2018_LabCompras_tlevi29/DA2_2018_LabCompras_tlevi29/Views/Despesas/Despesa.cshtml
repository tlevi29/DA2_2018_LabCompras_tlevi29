@model List<Despesa>
@{
    ViewData["Title"] = "Despesas";
}

<h2><strong>Despesas</strong></h2>
@if (Model.Count == 0)
{
    <h2>Sem despesas para apresentar...</h2>
}
else
{
    foreach (Despesa d in Model)
    {
        <div class="well">
            <strong>Nome: </strong>@d.NomeDespesa
            <strong>Quantidade: </strong>@d.Quantidade
            <strong>Valor: </strong>@d.Valor
            <strong>Categoria: </strong>@d.Categoria
            <strong>Pago: </strong>
            @if (d.Pago == true)
            {
                @:Sim
            }
            else
            {
                @:Não
            }
        </div>
    }
}

<div class="text-center">
    <a asp-action="NovaDespesa" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-plus"></span> Nova despesa</a>
</div>

