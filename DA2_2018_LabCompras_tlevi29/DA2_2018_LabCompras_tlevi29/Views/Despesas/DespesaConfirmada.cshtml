@model Despesa
@{
    ViewData["Title"] = "Despesa Confirmada";
}

<h2><strong>Despesa Confirmada</strong></h2>

<div class="row">
    <div class="col-md-8">
        <div class="well">
            <p><strong>Nome: </strong>@Model.NomeDespesa</p>
            <p><strong>Quantidade: </strong>@Model.Quantidade</p>
            <p><strong>Valor: </strong>@Model.Valor</p>
            <p><strong>Categoria: </strong>@Model.Categoria</p>
            <p>
                <strong>Pago: </strong>
                @if (Model.Pago == true)
                {
                    @:Sim
                }
                else
                {
                    @:Não
                }
            </p>
        </div>
        <p class="text-center"><a asp-action="NovaDespesa">Voltar</a></p>
    </div>
</div>
